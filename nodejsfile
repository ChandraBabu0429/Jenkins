pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git branch: 'master', url: 'git@github.com:YourGitHubUser/YourRepo.git'
            }
        }

        stage('Build') {
            agent {
                docker {
                    image 'node:14'
                    args '-u root'
                }
            }
            steps {
                sh 'npm install'
            }
        }

        stage('Test') {
            agent {
                docker {
                    image 'node:14'
                    args '-u root'
                }
            }
            steps {
                sh 'npm test'
            }
        }

        stage('Docker Build') {
            steps {
                script {
                    def dockerImage = docker.build("your-dockerhub-username/nodejs-app:${env.BUILD_ID}")
                }
            }
        }

        stage('Deploy') {
            steps {
                script {
                    sh '''
                    #!/bin/bash
                    docker run -d -p 8080:8080 your-dockerhub-username/nodejs-app:${env.BUILD_ID}
                    sleep 5

                    # Check if the container is running
                    docker ps || echo "No running containers"
                    '''
                }
            }
        }
    }

    post {
        always {
            echo 'Cleaning up...'
            deleteDir()
        }
    }
}

