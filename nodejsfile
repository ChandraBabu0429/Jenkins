pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git branch: 'master', url: 'git@github.com:ChandraBabu0429/Jenkins.git'
            }
        }

        stage('Build') {
            agent {
                docker {
                    image 'node:16'
                    args '-u root'
                }
            }
            steps {
                sh 'npm install'
            }
        }

        stage('Test') {
            agent {
                docker {
                    image 'node:16'
                    args '-u root'
                }
            }
            steps {
                sh 'npm test'
            }
        }

        stage('Docker Build') {
            steps {
                script {
                    def dockerImage = docker.build("chandu0616/nodejs-app:${env.BUILD_ID}")
                }
            }
        }

        stage('Deploy') {
            steps {
                script {
                    // Ensure this command is executed correctly in your environment
                    sh 'docker run -d -p 8082:8080 chandu0616/nodejs-app:${env.BUILD_ID}'
                    
                    // Optional: Check if the app is running
                    sh 'sleep 10'  // Wait for the app to start
                    sh 'curl -I http://localhost:8082'  // Check if the app is accessible
                }
            }
        }
    }

    post {
        always {
            echo 'Cleaning up...'
            deleteDir()
        }
    }
}

