pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git branch: 'master', url: 'git@github.com:ChandraBabu0429/Jenkins.git'
            }
        }

        stage('Build') {
            agent {
                docker {
                    image 'node:16'
                    args '-u root'
                }
            }
            steps {
                sh 'npm install'
            }
        }

        stage('Test') {
            agent {
                docker {
                    image 'node:16'
                    args '-u root'
                }
            }
            steps {
                sh 'npm test'
            }
        }

        stage('Docker Build') {
            steps {
                script {
                    def dockerImage = docker.build("chandu0616/nodejs-app:${env.BUILD_ID}")
                }
            }
        }

        stage('Deploy') {
            steps {
                script {
                    // Run the Docker container
                    sh 'docker run -d -p 8082:8080 chandu0616/nodejs-app:${env.BUILD_ID}'

                    // Wait for a few seconds to ensure the container starts properly
                    sh 'sleep 5'

                    // Check if the application is running
                    sh 'curl http://localhost:8082 || echo "Application is not accessible!"'
                }
            }
        }
    }

    post {
        always {
            echo 'Cleaning up...'
            deleteDir()
        }
    }
}

