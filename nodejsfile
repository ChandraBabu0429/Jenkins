pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git branch: 'master', url: 'git@github.com:ChandraBabu0429/Jenkins.git'
            }
        }

        stage('Build') {
            agent {
                docker {
                    image 'node:16'
                    args '-u root'
                }
            }
            steps {
                sh 'npm install'
            }
        }

        stage('Test') {
            agent {
                docker {
                    image 'node:16'
                    args '-u root'
                }
            }
            steps {
                sh 'npm test'
            }
        }

        stage('Docker Build') {
            steps {
                script {
                    // Build the Docker image locally
                    def dockerImage = docker.build("chandu0616/nodejs-app:${env.BUILD_ID}")
                }
            }
        }

        stage('Deploy') {
            steps {
                script {
                    // Run the Docker container locally, mapping to port 8082 on your host machine
                    sh 'docker run -d -p 8082:8080 chandu0616/nodejs-app:${env.BUILD_ID}'

                    // Optionally, you can add health checks or other commands to verify the application is running
                    // For example, you can use curl to check if the application is accessible
                    sh 'sleep 10'  // Give it a few seconds to start up
                    sh 'curl -I http://localhost:8082'
                }
            }
        }
    }

    post {
        always {
            echo 'Cleaning up...'
            deleteDir()
        }
    }
}

