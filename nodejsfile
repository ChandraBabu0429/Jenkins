pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git branch: 'master', url: 'git@github.com:ChandraBabu0429/Jenkins.git'
            }
        }

        stage('Build') {
            agent {
                docker {
                    image 'node:16'
                    args '-u root'
                }
            }
            steps {
                sh 'npm install'
            }
        }

        stage('Test') {
            agent {
                docker {
                    image 'node:16'
                    args '-u root'
                }
            }
            steps {
                sh 'npm test'
            }
        }

        stage('Docker Build') {
            steps {
                script {
                    def dockerImage = docker.build("chandu0616/nodejs-app:${env.BUILD_ID}")
                }
            }
        }

        stage('Deploy') {
            steps {
                script {
                    // Use simple shell commands to deploy the container
                    sh 'docker run -d -p 8082:8080 chandu0616/nodejs-app:${env.BUILD_ID}'
                    sh 'sleep 5'  // Give some time for the container to start

                    // Check if the container is running by listing the active containers
                    sh 'docker ps'
                }
            }
        }
    }

    post {
        always {
            echo 'Cleaning up...'
            deleteDir()
        }
    }
}

